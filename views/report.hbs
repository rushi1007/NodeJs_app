<!-- report.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Report</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    
    .invoice-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
    }

    .invoice {
      border: 1px solid #ddd;
      padding: 20px;
      text-align: left;
      width: 300px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .invoice img {
      max-width: 100%;
      height: auto;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <h1>Report for {{requestedInvoice}}</h1>

  <div class="invoice-container">
    {{#if invoices.length}}
      {{#each invoices}}
        <div class="invoice">
          <p><strong>Invoice ID:</strong> {{space_fn this "Invoice ID"}}</p>
          <p><strong>Product Line:</strong> {{space_fn this "Product line"}}</p>
          <p><strong>Product Name:</strong> {{this.name}}</p>
          <img src="{{this.image}}" alt="Product Image">
          <p><strong>Total:</strong> {{this.Total}}</p>
          <p><strong>Date:</strong> {{this.Date}}</p>
        </div>
      {{/each}}
    {{else}}
      <h1>No data found for the selected date.</h1>
    {{/if}}
  </div>
</body>
</html>
